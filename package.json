{
  "name": "alistairchisholm.co.uk",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r public/css/*",
    "build": "run-s build:*",
    "build:content": "eleventy",
    "build:css": "run-s scss autoprefixer",
    "debug": "DEBUG=Eleventy* eleventy",
    "scss": "sass --output public/css styles",
    "serve": "browser-sync start --server 'public' --files 'public/css/*.css, public/scripts/*.js, **/*.html, !node_modules/**/*.html' --no-notify",
    "start": "eleventy --serve",
    "watch": "run-p serve watch:*",
    "watch:content": "eleventy --watch",
    "watch:css": "sass --watch styles/ -o public/css/"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.6.0",
    "autoprefixer": "^9.4.5",
    "browser-sync": "^2.26.3",
    "markdown-it": "^12.0.3",
    "markdown-it-anchor": "^6.0.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1",
    "sass": "^1.58.3"
  }
}
